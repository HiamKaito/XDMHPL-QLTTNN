@model Backend.ThiSinhBUS

@{
	ViewBag.Title = "DanhSachThiSinh";
}

<h2>Danh sách thí sinh</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>ThiSinh</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })




		<div class="form-group">
			<div class="col-md-2 control-label ">
				<strong>Khóa thi</strong>
			</div>
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.MaKhoaThi,null,  new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.MaKhoaThi, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-2 control-label ">
				<strong>Phòng thi</strong>
			</div>
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.TenPhongThi,null, new { htmlAttributes = new { @class = "form-control" }, @type = "date" })
				@Html.ValidationMessageFor(model => model.TenPhongThi, "", new { @class = "text-danger" })
			</div>
		</div>










		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Tìm kiếm" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>
